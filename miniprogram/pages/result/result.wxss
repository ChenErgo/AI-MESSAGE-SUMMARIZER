.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 30rpx;
}

.cache-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 48rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.section-content {
  color: #666;
}

.point {
  display: flex;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.point:last-child {
  margin-bottom: 0;
}

.point-marker {
  color: #667eea;
  margin-right: 12rpx;
  font-weight: bold;
}

.point-text {
  flex: 1;
  font-size: 28rpx;
}

.decision {
  display: flex;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.decision:last-child {
  margin-bottom: 0;
}

.decision-marker {
  color: #52C41A;
  margin-right: 12rpx;
  font-weight: bold;
  min-width: 40rpx;
}

.decision-text {
  flex: 1;
  font-size: 28rpx;
}

.todo {
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.todo:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.todo-main {
  display: flex;
  margin-bottom: 12rpx;
  line-height: 1.6;
}

.todo-marker {
  color: #667eea;
  margin-right: 12rpx;
  font-weight: bold;
  min-width: 40rpx;
}

.todo-task {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.todo-meta {
  display: flex;
  gap: 24rpx;
  padding-left: 52rpx;
}

.todo-owner,
.todo-due {
  font-size: 24rpx;
  color: #999;
}

.question {
  display: flex;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.question:last-child {
  margin-bottom: 0;
}

.question-marker {
  color: #FAAD14;
  margin-right: 12rpx;
  font-weight: bold;
  min-width: 60rpx;
}

.question-text {
  flex: 1;
  font-size: 28rpx;
}

.risk-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.risk-tag {
  padding: 8rpx 20rpx;
  background: #FFF7E6;
  color: #FA8C16;
  font-size: 24rpx;
  border-radius: 6rpx;
}

.disclaimer {
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: #FFF1F0;
  border-radius: 12rpx;
  display: flex;
  align-items: flex-start;
}

.disclaimer-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.disclaimer-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx;
  background: #fff;
  border: 2rpx solid #667eea;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #667eea;
  line-height: 1;
}

.action-btn::after {
  border: none;
}

.action-btn.secondary {
  border-color: #d9d9d9;
  color: #666;
}

.btn-icon {
  font-size: 32rpx;
}

.back-home {
  text-align: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #667eea;
}

.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  font-size: 28rpx;
  color: #999;
}