.container {
  min-height: 100vh;
  background: #f5f7fa;
  padding: 30rpx;
}

.cache-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 48rpx;
  margin-bottom: 30rpx;
  font-size: 26rpx;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-content {
  padding-left: 48rpx;
}

.point {
  display: flex;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.point-marker {
  color: #667eea;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-top: 8rpx;
}

.point-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.decision {
  display: flex;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.decision-marker {
  color: #07C160;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 12rpx;
  min-width: 40rpx;
}

.decision-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.todo {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
}

.todo-main {
  display: flex;
  margin-bottom: 12rpx;
}

.todo-marker {
  color: #FFA500;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 12rpx;
  min-width: 40rpx;
}

.todo-task {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.todo-meta {
  display: flex;
  gap: 24rpx;
  padding-left: 52rpx;
}

.todo-owner {
  font-size: 24rpx;
  color: #666;
}

.todo-due {
  font-size: 24rpx;
  color: #666;
}

.question {
  display: flex;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #FFF3E0;
  border-radius: 12rpx;
}

.question-marker {
  color: #FF9800;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 12rpx;
  min-width: 60rpx;
}

.question-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.risk-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.risk-tag {
  padding: 8rpx 20rpx;
  background: #FFE5E5;
  color: #FF4D4F;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.disclaimer {
  display: flex;
  align-items: center;
  background: #FFF7E6;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.disclaimer-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.disclaimer-text {
  flex: 1;
  font-size: 26rpx;
  color: #FA8C16;
}

.actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  border: none;
  border-radius: 12rpx;
  padding: 0;
}

.action-btn.secondary {
  background: #fff;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.back-home {
  text-align: center;
  padding: 24rpx;
  font-size: 28rpx;
  color: #999;
}

.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  font-size: 28rpx;
  color: #999;
}